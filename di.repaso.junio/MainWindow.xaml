<Window x:Class="di.repaso.junio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.repaso.junio"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Height="450"
        Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="25*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="345*" />
        </Grid.RowDefinitions>

        <Grid Background="#302f41">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Barra de menú (ventana) -->
            <Image Source="/Recursos/Iconos/pelota.png"
                   Grid.Column="0"
                   HorizontalAlignment="Center"
                   Margin="1" />

            <TextBlock Text="APP - BASKET"
                       Foreground="White"
                       Grid.Column="1"
                       Margin="2"
                       FontSize="10"
                       HorizontalAlignment="Left" />

            <Image Source="/Recursos/Iconos/usuario.png"
                   Grid.Column="2"
                   Margin="1"
                   HorizontalAlignment="Center" />

            <TextBlock Text="ADMIN"
                       Grid.Column="3"
                       Foreground="White"
                       FontSize="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="2" />

            <Button x:Name="btnMinimizar"
                    Click="btnMinimizar_Click"
                    Grid.Column="4"
                    Margin="1"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center"
                    Height="20">
                <Image Source="/Recursos/Iconos/minimizar.png"
                       VerticalAlignment="Bottom" />
            </Button>

            <Button x:Name="btnMaximizar"
                    Click="btnMaximizar_Click"
                    Grid.Column="5"
                    Margin="1"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="20">
                <Image Source="/Recursos/Iconos/maximizar.png" />
            </Button>

            <Button x:Name="btnCerrar"
                    Click="btnCerrar_Click"
                    Grid.Column="6"
                    Margin="1"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="20">
                <Image Source="/Recursos/Iconos/cerrar.png" />
            </Button>
        </Grid>

        <Grid Background="#476db6"
              Grid.Row="1"
              Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

            <!-- LÍNEAS SEPARADORAS (eran rectángulos de mierda joderostiajoder) -->
            <Rectangle Grid.Column="1"
                       Fill="White"
                       Width="1"
                       HorizontalAlignment="Left"
                       Height="75"
                       VerticalAlignment="Center" />

            <Rectangle Grid.Column="2"
                       Fill="White"
                       Width="1"
                       HorizontalAlignment="Left"
                       Height="75"
                       VerticalAlignment="Center" />

            <!-- TÍTULOS -->
            <TextBlock Grid.Column="0"
                       Text="EQUIPOS"
                       Foreground="White"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Margin="10"
                       FontSize="12" />

            <TextBlock Grid.Column="1"
                       Text="JUGADORES"
                       Foreground="White"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Margin="10"
                       FontSize="12" />

            <!-- BOTONES EQUIPOS -->
            <StackPanel Grid.Column="0"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0 20 0 0"
                        Width="130">

                <Button x:Name="btnAgregarEquipo"
                        Click="btnAgregarEquipo_Click"
                        BorderBrush="White"
                        Background="Transparent"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                    <Image Source="/Recursos/Iconos/addequipo.png"
                           Width="20"
                           Height="30" />
                </Button>

                <Button x:Name="btnListarEquipo"
                        Click="btnListarEquipo_Click"
                        BorderBrush="White"
                        Background="Transparent"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Margin="20 0 20 0"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                    <Image Source="/Recursos/Iconos/listaequipo.png"
                           Width="20"
                           Height="30" />
                </Button>

                <Button x:Name="btnArbolEquipo"
                        Click="btnArbolEquipo_Click"
                        BorderBrush="White"
                        Background="Transparent"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                    <Image Source="/Recursos/Iconos/arbolequipo.png"
                           Width="20"
                           Height="30" />
                </Button>
            </StackPanel>


            <!-- BOTONES JUGADORES -->
            <StackPanel Grid.Column="1"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0 20 0 0"
                        Width="130">

                <Button x:Name="btnAgregarJugador"
                        Click="btnAgregarJugador_Click"
                        BorderBrush="White"
                        Background="Transparent"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                    <Image Source="/Recursos/Iconos/addjugador.png"
                           Width="20"
                           Height="30" />
                </Button>

                <Button x:Name="btnListaJugadores"
                        Click="btnListaJugadores_Click"
                        BorderBrush="White"
                        Background="Transparent"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Margin="20 0 20 0"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                    <Image Source="/Recursos/Iconos/listajugador.png"
                           Width="20"
                           Height="30" />
                </Button>

                <Button x:Name="btnArbolJugadores"
                        Click="btnArbolJugadores_Click"
                        BorderBrush="White"
                        Background="Transparent"
                        BorderThickness="1"
                        Width="30"
                        Height="30"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                    <Image Source="/Recursos/Iconos/arboljugador.png"
                           Width="20"
                           Height="30" />
                </Button>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="3"
              x:Name="gridPrincipal">
            <Image Source="/Recursos/Imagenes/login.jpg"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="20" />

        </Grid>
    </Grid>
</Window>