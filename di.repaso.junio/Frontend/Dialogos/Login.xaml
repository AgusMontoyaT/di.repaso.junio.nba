<Window x:Class="di.repaso.junio.Frontend.Dialogos.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:di.repaso.junio.Frontend.Dialogos"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="Login"
        Height="800"
        Width="1200">

    <Grid Background="#476db6">
        <Ellipse Width="900"
                 Height="900"
                 Margin="600 0 0 0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Grid.ColumnSpan="2"
                 Fill="#302f41">
        </Ellipse>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <StackPanel Grid.Column="0"
                        Width="230"
                        Height="600"
                        Grid.RowSpan="3"
                        Orientation="Vertical"
                        HorizontalAlignment="Right"
                        Background="#302f41">
                <Image Source="/Recursos/Imagenes/login.jpg"
                       Margin="0 100 0 0" />
                <TextBlock Text="BIENVENIDOS"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Margin="0 20 0 0" />
                <Separator Width="100"
                           Foreground="White"
                           Margin="0 10 0 0" />
            </StackPanel>


            <Grid Grid.Column="1"
                  Grid.RowSpan="3"
                  Width="700"
                  HorizontalAlignment="Left"
                  Height="600"
                  Background="White">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="INICIO DE SESIÓN"
                           Grid.Row="1"
                           FontSize="24"
                           Height="40"
                           FontWeight="DemiBold"
                           HorizontalAlignment="Center" />

                <TextBlock Text="Por favor, introduce tus credenciales"
                           Height="50"
                           HorizontalAlignment="Center"
                           Margin="0 5 0 0"
                           Grid.Row="2"
                           FontSize="16" />

                <TextBox Grid.Row="3"
                         x:Name="txtNombreUsuario"
                         HorizontalAlignment="Center"
                         Width="400"
                         Height="50"
                         Background="#f5f5f5"
                         BorderBrush="#f5f5f5"
                         VerticalContentAlignment="Center"
                         Style="{StaticResource MahApps.Styles.TextBox}"
                         mah:TextBoxHelper.ClearTextButton="True"
                         mah:TextBoxHelper.Watermark="Nombre de usuario" />

                <PasswordBox Grid.Row="4"
                             x:Name="passClaveAcceso"
                             Width="400"
                             Height="50"
                             Background="#f5f5f5"
                             BorderBrush="#f5f5f5"
                             VerticalContentAlignment="Center"
                             Style="{StaticResource MahApps.Styles.PasswordBox.Button.Revealed}"
                             mah:TextBoxHelper.Watermark="Clave de acceso"
                             mah:TextBoxHelper.ClearTextButton="True" />

                <Button x:Name="btnLogin"
                        Grid.Row="5"
                        Width="400"
                        HorizontalAlignment="Center"
                        Content="INICIO DE SESIÓN"
                        Height="40"
                        Foreground="White"
                        FontSize="16"
                        IsDefault="True"
                        Click="btnLogin_Click" />

                <Separator Width="410"
                           Grid.Row="6"
                           Background="LightGray"
                           Height="30" />

                <StackPanel Grid.Row="7"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">
                    <Button x:Name="btnGoogle"
                            Height="50"
                            Background="Transparent"
                            Width="200"
                            Padding="10"
                            Click="btnGoogle_Click">
                        <Image Source="/Recursos/Iconos/google.png" />
                    </Button>

                    <Button x:Name="btnFacebook"
                            Height="50"
                            Background="Transparent"
                            Width="200"
                            Padding="10"
                            Click="btnFacebook_Click"
                            Margin="20 0 0 0">
                        <Image Source="/Recursos/Iconos/facebook.png" />
                    </Button>
                </StackPanel>

            </Grid>

            <Image Source="/Recursos/Iconos/pelota.png"
                   Width="60"
                   Grid.Row="1"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.ColumnSpan="2"
                   Grid.RowSpan="2"
                   Margin="0,350,810,0" />
        </Grid>
    </Grid>
</Window>
